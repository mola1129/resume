---
import "../styles/global.css";
import Footer from "@/components/Footer.vue";
import { formatDateJapanese } from "@/utils/date";

const buildTime = new Date();
const formattedDate = formatDateJapanese(buildTime);
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <title>mola1129 - Resume</title>
    <meta name="description" content="mola1129の職務経歴書" />

    <!-- OGP Meta Tags -->
    <meta property="og:title" content="mola1129 - Resume" />
    <meta property="og:description" content="mola1129の職務経歴書" />
    <meta property="og:type" content="profile" />
    <meta property="og:url" content="https://mola1129.dev/" />
    <meta property="og:locale" content="ja_JP" />
    <meta property="profile:username" content="mola1129" />
    <meta property="og:image" content="https://mola1129.dev/profile.png" />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:image:width" content="400" />
    <meta property="og:image:height" content="400" />
    <meta property="og:image:alt" content="mola1129のプロフィール画像" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
  </head>
  <body>
    <slot />
    <Footer formattedDate={formattedDate} />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
