---
import "../styles/global.css";
import Footer from "@/components/Footer.vue";
import { formatDateJapanese } from "@/utils/date";

const buildTime = new Date();
const formattedDate = formatDateJapanese(buildTime);
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <title>[WIP] Resume</title>

    <!-- OGP Meta Tags -->
    <meta property="og:title" content="mola1129 - Resume" />
    <meta property="og:description" content="個人履歴書・ポートフォリオサイト - 技術スキルと経験を紹介" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://mola1129.dev/" />
    <meta property="og:image" content="https://mola1129.dev/profile.png" />
    <meta property="og:site_name" content="mola1129 Resume" />

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="mola1129 - Resume" />
    <meta name="twitter:description" content="個人履歴書・ポートフォリオサイト - 技術スキルと経験を紹介" />
    <meta name="twitter:image" content="https://mola1129.dev/profile.png" />
  </head>
  <body>
    <slot />
    <Footer formattedDate={formattedDate} />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
