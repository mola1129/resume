---
import Layout from '../layouts/Layout.astro';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '@/components/ui/card';
import { skills } from '@/data/skills';

---

<Layout>
	<main class="min-h-screen bg-linear-to-br from-slate-50 to-slate-100 dark:from-slate-950 dark:to-slate-900 py-12 px-4">
		<div class="max-w-6xl mx-auto">
			<!-- ヘッダーセクション -->
			<header class="text-center mb-12">
				<h1 class="text-5xl font-bold text-slate-900 dark:text-slate-50 mb-4">
					技術スタック
				</h1>
				<p class="text-xl text-slate-600 dark:text-slate-400">
					Software Engineer Skills & Experience
				</p>
			</header>

			<!-- スキルカードグリッド -->
			<div class="space-y-8">
				{skills.map((category) => (
				<div>
				<Card class="border shadow-sm transition-all duration-300">
						<CardHeader class="pb-4">
								<div class="flex items-center gap-3">
								<CardTitle class="text-2xl text-slate-900 dark:text-slate-50">
									{category.category}

								</CardTitle>
							</div>
							<CardDescription class="text-slate-600 dark:text-slate-400">
									{category.description}
								</CardDescription>
							</CardHeader>
							<CardContent>
								<div class="grid grid-cols-3 md:grid-cols-5 gap-3">
									{category.items.map((skill) => (
										<div class="aspect-square p-3 rounded-lg border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-800 hover:shadow-md transition-all duration-200 flex flex-col items-center justify-center gap-2">
											<div class="shrink-0 w-14 h-14 bg-slate-100 dark:bg-slate-700 rounded p-2">
												<img 
													src={`https://skillicons.dev/icons?i=${skill.icon}`}
													alt={skill.name}
													class="w-full h-full object-contain"
													loading="lazy"
												/>
											</div>
											<h3 class="font-semibold text-base text-center text-slate-900 dark:text-slate-50 leading-tight">
												{skill.name}
											</h3>
										</div>
									))}
								</div>
							</CardContent>
						</Card>
					</div>
				))}
			</div>


		</div>
	</main>
</Layout>
